{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/error-response.json",
  "title": "ErrorResponse",
  "type": "object",
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1,
          "description": "Stable, low-cardinality error code (e.g., INVALID_JSON, MISSING_REQUIRED_FIELD, PAYLOAD_TOO_LARGE, UNSUPPORTED_MEDIA_TYPE)."
        },
        "message": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable message for debugging (not for end-user display)."
        },
        "trace_id": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
